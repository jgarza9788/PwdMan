import keyboard

def on_key_event(e):
    print(f"Key {e.name} {'pressed' if e.event_type == keyboard.KEY_DOWN else 'released'}")

# Set up the keyboard hook only when your application is running
try:
    keyboard.hook(on_key_event)
    input("Press Enter to exit...")
except KeyboardInterrupt:
    pass
finally:
    # Unhook the keyboard when your application is about to exit
    keyboard.unhook_all()
